<main>
  <p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  		<div class="form-group">
  		  <h4>Title</h4>
      <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h4>Opinion</h4>
      <%= f.text_area :body %>
      </div>
      <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with= "Update Book">
  		</div>
  		<% end %>

  		<span>
        <%= link_to "show", book_path(@book.id) %>
      </span>
      |
      <span>
       <%= link_to "back", '/books' %>
      </span>
  	</div>
  </div>
 </div>
 </main>