<main>
  <p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  		<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  		<div class="form-group">
  		  <h4>Title</h4>
      <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h4>Opinion</h4>
      <%= f.text_area :body %>
      </div>
      <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with= "Update Book">
  		</div>
  		<% end %>

  		<span>
        <%= link_to book_path(@book.id) do %>
        Show
        <% end %>
      </span>
      |
      <span>
       <%= link_to books_path do %>
       Back
       <% end %>
      </span>
  	</div>
  </div>
 </div>
 </main>