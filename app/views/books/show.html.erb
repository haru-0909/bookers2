<main>
    <p id="notice"><%= flash[:alert] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
<%= render 'userinfo', user: @user %>

      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
           <table class="table">
               <tbody>

                   <tr>
                       <td><%= image_tag @book.user %></i>
                       <br><%= @user.name %>
                       </td>
                       <td><%= @book.title %></td>
                       <td><%= @book.body %></td>
                       <td>
                         <a class="btn btn-sm btn-success link_to">
                         <%= link_to "edit", edit_book_path(@book.id) %></a>
                       </td>
                       <td>
                       <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
                       </td>
                   </tr>
               </tbody>
           </table>
      </div>
    </div>
  </div>
</main>